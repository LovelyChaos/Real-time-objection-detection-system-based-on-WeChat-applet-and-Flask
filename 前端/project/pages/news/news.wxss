.bottom_area{
  width: 100vw;
  height: 100vw;
  display: flex;
  flex-direction: column;
  border: 1px solid #01bef8;
  box-sizing: border-box;
  flex-wrap: wrap;
  -webkit-flex-wrap:wrap;
}
.bottom{
  background-color: rgb(187, 255, 0);
  width: 100vw;
  height: 10vw;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: 1px solid #ff00ea;
  box-sizing: border-box;
}
.img_list 
.img_li{
	width: 90vw;
	height: 90vw;
  flex-shrink: 0;
  -webkit-flex-shrink:0;
}
.addimg{
	width: 200rpx;
	height: 200rpx;
	border: 1px solid #fffb01;
  margin: 5rpx;
  flex-shrink: 0;
  -webkit-flex-shrink:0;
}
.addimg image{
	width: 150rpx;
	height: 150rpx;
	margin: 25rpx 25rpx;
}
.img_list .img_li image{
  width: 100%;
  height: 100%;
}
